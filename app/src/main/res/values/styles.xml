<resources>

    <!-- Base application theme. -->
    <!-- Non appcompat theme: android:Theme.Material.Light.NoActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Display.Group">
        <item name="android:background">@color/background</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AppTheme.Display" parent="android:Widget.Material.EditText">
        <item name="android:gravity">end|bottom</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="AppTheme.Display.Preview" parent="AppTheme.Display">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="AppTheme.BaseCalculatorButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:background">@color/calc_button_background</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:onClick">calculatorButtonClick</item>
        <item name="android:longClickable">true</item>
        <item name="onLongClick">calculatorButtonLongClick</item>
    </style>

    <style name="AppTheme.BaseCalculatorButton.DigitTheme">
        <item name="android:colorControlHighlight">@color/background_ripple</item>
    </style>

    <style name="AppTheme.BaseCalculatorButton.Digit" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/calc_button_background</item>
        <item name="android:theme">@style/AppTheme.BaseCalculatorButton.DigitTheme</item>
    </style>

    <style name="AppTheme.BaseCalculatorButton.Unit" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme.BaseCalculatorButton.Operator" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="AppTheme.BaseCalculatorButton.Equals" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/calc_button_background</item>
    </style>

    <style name="AppTheme.BaseCalculatorButton.Advanced" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/primary_dim</item>
    </style>

    <style name="AppTheme.CalculatorButton.Secondary" parent="AppTheme.CalculatorButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/background_calc_secondary</item>
        <item name="targetBottomExtend">60dp</item>
    </style>

    <style name="AppTheme.SecondaryGroup">
        <item name="android:background">@drawable/background_calc_secondary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppTheme.MenuButton">
        <item name="android:src">@drawable/ic_menu_black_24dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/open_side_menu</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
