<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Display.Group">
        <item name="android:background">@color/background</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AppTheme.Display" parent="android:Widget.Material.EditText">
        <item name="android:gravity">end|bottom</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="AppTheme.Display.Preview" parent="AppTheme.Display">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTheme.CalculatorButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">25dp</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:background">@color/calc_button_background</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:onClick">calculatorButtonClick</item>
        <item name="android:longClickable">true</item>
        <item name="onLongClick">calculatorButtonLongClick</item>
    </style>

    <style name="AppTheme.CalculatorButton.DigitTheme">
        <item name="android:colorControlHighlight">@color/background_ripple</item>
    </style>

    <style name="AppTheme.CalculatorButton.Digit" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/calc_button_background</item>
        <item name="android:theme">@style/AppTheme.CalculatorButton.DigitTheme</item>
    </style>

    <style name="AppTheme.CalculatorButton.Unit" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/primary</item>
        <item name="android:minWidth">55dp</item>
    </style>

    <style name="AppTheme.CalculatorButton.Operator" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="AppTheme.CalculatorButton.Equals" parent="AppTheme.CalculatorButton">
        <item name="android:background">@color/calc_button_background</item>
    </style>

    <style name="AppTheme.CalculatorButton.Advanced" parent="AppTheme.CalculatorButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@color/primary_dim</item>
    </style>

    <style name="AppTheme.CalculatorButton.Secondary" parent="AppTheme.CalculatorButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/background_calc_secondary</item>
    </style>

    <style name="AppTheme.SecondaryGroup">
        <item name="android:background">@drawable/background_calc_secondary</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
